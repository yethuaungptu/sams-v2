<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Teacher Add</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <% include ../../../partial/admin_drawer %>
    <h1 class="my-5 text-center text-2xl font-bold text-base-content">
      <%= locals.dept.name %> Department's Teacher Add
    </h1>
    <div class="grid lg:grid-cols-10 md:grid-cols-1 sm:grid-cols-1 mb-32">
      <div></div>
      <div class="grid col-span-8">
        <div class="card glass w-full">
          <h1 class="text-center text-2xl font-bold my-3">Adding Teacher</h1>
          <form
            action="/admin/departments/<%= locals.dept.key %>/teacher/add"
            method="post"
            class="grid lg:grid-cols-2 md:grid-cols-1 sm:grid-cols-1 gap-5 p-5"
            id="frm"
          >
            <label class="input input-bordered flex items-center gap-2">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 16 16"
                fill="currentColor"
                class="h-4 w-4 opacity-70"
              >
                <path
                  d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6ZM12.735 14c.618 0 1.093-.561.872-1.139a6.002 6.002 0 0 0-11.215 0c-.22.578.254 1.139.872 1.139h9.47Z"
                />
              </svg>
              <input
                type="text"
                name="name"
                id="name"
                class="grow"
                placeholder="Name"
              />
            </label>
            <label class="input input-bordered flex items-center gap-2">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 16 16"
                fill="currentColor"
                class="h-4 w-4 opacity-70"
              >
                <path
                  d="M2.5 3A1.5 1.5 0 0 0 1 4.5v.793c.026.009.051.02.076.032L7.674 8.51c.206.1.446.1.652 0l6.598-3.185A.755.755 0 0 1 15 5.293V4.5A1.5 1.5 0 0 0 13.5 3h-11Z"
                />
                <path
                  d="M15 6.954 8.978 9.86a2.25 2.25 0 0 1-1.956 0L1 6.954V11.5A1.5 1.5 0 0 0 2.5 13h11a1.5 1.5 0 0 0 1.5-1.5V6.954Z"
                />
              </svg>
              <input
                type="email"
                class="grow"
                name="email"
                id="email"
                placeholder="Email"
              />
            </label>
            <label class="input input-bordered flex items-center gap-2">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 16 16"
                fill="currentColor"
                class="h-4 w-4 opacity-70"
              >
                <path
                  d="M1.885.511a1.745 1.745 0 0 1 2.61.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.68.68 0 0 0 .178.643l2.457 2.457a.68.68 0 0 0 .644.178l2.189-.547a1.75 1.75 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.6 18.6 0 0 1-7.01-4.42 18.6 18.6 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877z"
                />
              </svg>
              <input
                type="text"
                class="grow"
                name="phone"
                id="phone"
                placeholder="Phone No"
              />
            </label>
            <label class="input input-bordered flex items-center gap-2">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 16 16"
                fill="currentColor"
                class="h-4 w-4 opacity-70"
              >
                <path
                  d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10m0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6"
                />
              </svg>
              <input
                type="text"
                class="grow"
                name="address"
                id="address"
                placeholder="Address"
              />
            </label>
            <label class="input input-bordered flex items-center gap-2">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 16 16"
                fill="currentColor"
                class="h-4 w-4 opacity-70"
              >
                <path
                  fill-rule="evenodd"
                  d="M14 6a4 4 0 0 1-4.899 3.899l-1.955 1.955a.5.5 0 0 1-.353.146H5v1.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-2.293a.5.5 0 0 1 .146-.353l3.955-3.955A4 4 0 1 1 14 6Zm-4-2a.75.75 0 0 0 0 1.5.5.5 0 0 1 .5.5.75.75 0 0 0 1.5 0 2 2 0 0 0-2-2Z"
                  clip-rule="evenodd"
                />
              </svg>
              <input
                type="password"
                name="password"
                id="password"
                class="grow"
                placeholder="Password"
              />
            </label>
            <label class="input input-bordered flex items-center gap-2">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 16 16"
                fill="currentColor"
                class="h-4 w-4 opacity-70"
              >
                <path
                  fill-rule="evenodd"
                  d="M14 6a4 4 0 0 1-4.899 3.899l-1.955 1.955a.5.5 0 0 1-.353.146H5v1.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-2.293a.5.5 0 0 1 .146-.353l3.955-3.955A4 4 0 1 1 14 6Zm-4-2a.75.75 0 0 0 0 1.5.5.5 0 0 1 .5.5.75.75 0 0 0 1.5 0 2 2 0 0 0-2-2Z"
                  clip-rule="evenodd"
                />
              </svg>
              <input
                type="password"
                name="compassword"
                id="compassword"
                class="grow"
                placeholder="Confirm Password"
              />
            </label>
            <% if(locals.dept.type == "major"){ %>
            <div class="grid grid-cols-2 gap-2">
              <div class="form-control w-full">
                <label class="label cursor-pointer">
                  <span class="label-text">Is Family Teacher?</span>
                  <input
                    type="checkbox"
                    id="isFam"
                    name="isFamily"
                    class="toggle"
                    onclick="famChange()"
                  />
                </label>
              </div>
              <div>
                <select
                  class="select select-bordered w-full max-w-xs hidden"
                  id="famOpt"
                  name="year"
                >
                  <option value="1BE" <%= insertYear.includes('1BE') ? 'disabled':'' %> >1BE</option>
                  <option value="2BE" <%= insertYear.includes('2BE') ? 'disabled':'' %> >2BE</option>
                  <option value="3BE" <%= insertYear.includes('3BE') ? 'disabled':'' %>>3BE</option>
                  <option value="4BE" <%= insertYear.includes('4BE') ? 'disabled':'' %>>4BE</option>
                  <option value="5BE" <%= insertYear.includes('5BE') ? 'disabled':'' %>>5BE</option>
                  <option value="6BE" <%= insertYear.includes('6BE') ? 'disabled':'' %>>6BE</option>
                </select>
              </div>
            </div>
          <%}%>
            <div class="grid lg:col-span-2 my-5">
              <button
                type="button"
                class="btn block w-40 ms-auto btn-primary"
                id="btnAdd"
              >
                Add
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <% include ../../partial/footerbar %>
  </body>
  <script src="/javascripts/jquery.min.js"></script>
  <script>
    function famChange() {
      var famOpt = document.getElementById("famOpt");
      if (document.getElementById("isFam").checked) {
        famOpt.classList.remove("hidden");
      } else {
        famOpt.classList.add("hidden");
      }
    }
    $("#btnAdd").click(function () {
      const name = $("#name").val() || "";
      const email = $("#email").val() || "";
      const address = $("#address").val() || "";
      const phone = $("#phone").val() || "";
      const password = $("#password").val() || "";
      const compassword = $("#compassword").val() || "";
      if (
        name != "" &&
        email != "" &&
        address != "" &&
        phone != "" &&
        password != "" &&
        compassword != ""
      ) {
        if (password != compassword) {
          alert("Password and confirm password not match");
        } else {
          const data = { email: email };
          $.ajax("/admin/departments/<%= locals.dept.key %>/teacher/check", {
            type: "POST",
            data: data,
            success: function (result) {
              if (result.status == false) {
                alert("Email is already in use");
              } else {
                $("#frm").submit();
              }
            },
          });
        }
      } else {
        alert("Please fill all fields");
      }
    });
  </script>
</html>
