<!DOCTYPE html>
<html lang="en" data-theme="cupcake">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Index</title>
  </head>
  <body>
    <% include ../partial/teacher_drawer %>
    <div class="mt-5 text-center text-xl font-bold">Teacher Timetable</div>
    <div
      class="grid lg:grid-cols-12 md:grid-cols-1 sm:grid-cols-1 overflow-x-auto mx-1 lg:mx-10 mt-5 lg:mt-20"
    >
      <input type="hidden" id="times" value="<%= list %>" />
      <div class="grid gap-4 lg:col-span-12">
        <table class="table">
          <thead class="text-lg">
            <th class="border-4 border-base-content">Day\Time</th>
            <th class="border-4 border-base-content">9:00-10:00AM</th>
            <th class="border-4 border-base-content">10:00-11:00AM</th>
            <th class="border-4 border-base-content">11:00-12:00AM</th>
            <th class="border-4 border-base-content border-b-0"></th>
            <th class="border-4 border-base-content">1:00-2:00PM</th>
            <th class="border-4 border-base-content">2:00-3:00PM</th>
            <th class="border-4 border-base-content">3:00-4:00PM</th>
          </thead>
          <tbody>
            <tr>
              <td class="border-4 border-base-content text-lg text-center">
                MON
              </td>
              <td class="border-4 border-base-content" id="d1p1"></td>
              <td class="border-4 border-base-content" id="d1p2"></td>
              <td class="border-4 border-base-content" id="d1p3"></td>
              <td class="border-4 border-base-content border-t-0" rowspan="5">
                Lunch Break
              </td>
              <td class="border-4 border-base-content" id="d1p4"></td>
              <td class="border-4 border-base-content" id="d1p5"></td>
              <td class="border-4 border-base-content" id="d1p6"></td>
            </tr>
            <tr>
              <td class="border-4 border-base-content text-lg text-center">
                TUE
              </td>
              <td class="border-4 border-base-content" id="d2p1"></td>
              <td class="border-4 border-base-content" id="d2p2"></td>
              <td class="border-4 border-base-content" id="d2p3"></td>
              <td class="border-4 border-base-content" id="d2p4"></td>
              <td class="border-4 border-base-content" id="d2p5"></td>
              <td class="border-4 border-base-content" id="d2p6"></td>
            </tr>
            <tr>
              <td class="border-4 border-base-content text-lg text-center">
                WED
              </td>
              <td class="border-4 border-base-content" id="d3p1"></td>
              <td class="border-4 border-base-content" id="d3p2"></td>
              <td class="border-4 border-base-content" id="d3p3"></td>
              <td class="border-4 border-base-content" id="d3p4"></td>
              <td class="border-4 border-base-content" id="d3p5"></td>
              <td class="border-4 border-base-content" id="d3p6"></td>
            </tr>
            <tr>
              <td class="border-4 border-base-content text-lg text-center">
                THU
              </td>
              <td class="border-4 border-base-content" id="d4p1"></td>
              <td class="border-4 border-base-content" id="d4p2"></td>
              <td class="border-4 border-base-content" id="d4p3"></td>
              <td class="border-4 border-base-content" id="d4p4"></td>
              <td class="border-4 border-base-content" id="d4p5"></td>
              <td class="border-4 border-base-content" id="d4p6"></td>
            </tr>
            <tr>
              <td class="border-4 border-base-content text-lg text-center">
                FRI
              </td>
              <td class="border-4 border-base-content" id="d5p1"></td>
              <td class="border-4 border-base-content" id="d5p2"></td>
              <td class="border-4 border-base-content" id="d5p3"></td>
              <td class="border-4 border-base-content" id="d5p4"></td>
              <td class="border-4 border-base-content" id="d5p5"></td>
              <td class="border-4 border-base-content" id="d5p6"></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </body>
  <script src="/javascripts/jquery.min.js"></script>
  <script>
    $(function () {
      const times = JSON.parse($("#times").val());
      for (var i = 0; i < times.length; i++) {
        let id = "#d" + times[i].time.charAt(0) + "p" + times[i].time.charAt(1);
        console.log(id, times[i].subjectId.name);
        $(id).text(times[i].subjectId.name);
      }
    });
  </script>
</html>
