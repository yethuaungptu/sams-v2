  <div class="drawer-content flex flex-col mb-20">
    <!-- Navbar -->
    <div class="navbar w-full bg-base-300 fixed top-0 z-30">
      <div class="flex-none lg:hidden">
        <label
          for="my-drawer-3"
          aria-label="open sidebar"
          class="btn btn-square btn-ghost"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            class="inline-block h-6 w-6 stroke-current"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"
            ></path>
          </svg>
        </label>
      </div>

      <div class="mx-1 flex-1 px-2">
        <div class="w-15 lg:w-10 rounded-full">
          <img alt="Tailwind CSS Navbar component" src="/images/sams.svg" />
        </div>
